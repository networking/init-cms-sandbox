{% from 'MopaBootstrapBundle::flash.html.twig' import session_flash %}
{% use "NetworkingInitCmsBundle:Navbar:admin_navbar.html.twig" %}

<!DOCTYPE html>

{% block html_tag %}
<html>
{% endblock html_tag %}

{% block head %}
<head>
    <meta charset="UTF-8" />

    {% block head_style %}
    {# Override this block to add your own files! #}
    {% stylesheets filter='less,?yui_css'
       '@ApplicationNetworkingInitCmsBundle/Resources/public/less/styles.less'
       '@ApplicationNetworkingInitCmsBundle/Resources/public/css/prettyPhoto.css'
        output='css/styles.css'
    %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}
        {{ block('admin_style') }}
    {% endblock head_style %}

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% block head_script %}
    {# Overwrite this block to add your own js here, to get them generated into final files #}
    {% endblock head_script %}

    <title>{% block title %}{% endblock title %}</title>
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    {% block head_bottom %}
    {% endblock head_bottom %}
</head>
{% endblock head %}

{% block body_tag %}
<body data-spy="scroll">
{% endblock body_tag %}

{# From here the body starts #}
{% block body_start %}
{% endblock body_start %}

{% block body %}

    {{ block('admin_navbar') }}


    {% block container %}
    <div class="{% block container_class %}container-fluid{% endblock container_class %}">

        {% block navbar %}{% endblock navbar %}

        {% block header %}
        {% endblock header %}

        <div class="content">
	        {% block page_header %}
	        {% endblock page_header %}

            {% block flashes %}
            {% from 'MopaBootstrapBundle::flash.html.twig' import session_flash %}
                {{ session_flash(null,true) }}
            {% if app.session.flashbag.peekAll|length > 0 %}
            <div class="row-fluid">
                <div class="span12">
                {{ session_flash()}}
                </div>
            </div>
            {% endif %}
            {% endblock flashes %}

            {% block content_row %}
            <div class="row-fluid">
                {% block content %}
                    {% block content_sidebar %}
                    {% endblock content_sidebar %}
                {% endblock content %}
                {% block fos_user_content %}
                {% endblock fos_user_content %}
            </div>
            {% endblock content_row %}
        </div>
        <footer>
            {% block footer %}
            {% endblock footer %}
        </footer>
    </div> <!-- /container -->
    {% endblock container %}
    {% block foot_script %}
    {# To only use a subset or add more js overwrite and copy paste this block
    To speed up page loads save a copy of jQuery in your project and override this block to include the correct path
    Otherwise the regeneration is done on every load in dev more with use_controller: true
     #}
    {% javascripts
        'http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js'
        '@ApplicationNetworkingInitCmsBundle/Resources/public/js/bootstrap-transition.js'
        '@ApplicationNetworkingInitCmsBundle/Resources/public/js/bootstrap-alert.js'
        '@ApplicationNetworkingInitCmsBundle/Resources/public/js/bootstrap-modal.js'
        '@ApplicationNetworkingInitCmsBundle/Resources/public/js/bootstrap-dropdown.js'
        '@ApplicationNetworkingInitCmsBundle/Resources/public/js/bootstrap-scrollspy.js'
        '@ApplicationNetworkingInitCmsBundle/Resources/public/js/bootstrap-tab.js'
        '@ApplicationNetworkingInitCmsBundle/Resources/public/js/bootstrap-tooltip.js'
        '@ApplicationNetworkingInitCmsBundle/Resources/public/js/bootstrap-popover.js'
        '@ApplicationNetworkingInitCmsBundle/Resources/public/js/bootstrap-button.js'
        '@ApplicationNetworkingInitCmsBundle/Resources/public/js/bootstrap-affix.js'
        '@ApplicationNetworkingInitCmsBundle/Resources/public/js/bootstrap-collapse.js'
        '@ApplicationNetworkingInitCmsBundle/Resources/public/js/bootstrap-carousel.js'
        '@ApplicationNetworkingInitCmsBundle/Resources/public/js/jquery.prettyPhoto.js'
    output='js/sandbox.js'
    %}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock foot_script %}
{% endblock body %}
</body>
</html>

