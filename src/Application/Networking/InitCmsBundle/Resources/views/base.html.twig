{% from 'MopaBootstrapBundle::flash.html.twig' import session_flash %}

<!DOCTYPE html>

{% block html_tag %}
<html>
{% endblock html_tag %}

{% block head %}
    <head>
        <meta charset="UTF-8"/>

        {% block head_style %}
            {# Override this block to add your own files! #}
            <link href="{{ asset('bundles/applicationnetworkinginitcms/css/style.css') }}" type="text/css" rel="stylesheet" media="screen"/>
            <link href="{{ asset('bundles/applicationnetworkinginitcms/vendor/featherlight/src/featherlight.css') }}" type="text/css" rel="stylesheet" media="screen"/>
            <link href="{{ asset('bundles/applicationnetworkinginitcms/vendor/featherlight/src/featherlight.gallery.css') }}" type="text/css" rel="stylesheet" media="screen"/>
        {% endblock head_style %}

        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        {% block head_script %}
            {# Overwrite this block to add your own js here, to get them generated into final files #}
        {% endblock head_script %}

        <title>{% block title %}{% endblock title %}</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"/>
        {% block head_bottom %}
        {% endblock head_bottom %}
    </head>
{% endblock head %}

{% block body_tag %}
<body data-spy="scroll">
{% endblock body_tag %}

{# From here the body starts #}
{% block body_start %}
{% endblock body_start %}

{% block body %}

{% block container %}
    <div class="container {% block container_class %}container-fluid{% endblock container_class %}">
        {% block search %}
        {#<form action="{{ path('site_search') }}" method="get">#}
            {#<input type="search" name="search">#}
        {#</form>#}
        {% endblock %}
        {% block navbar %}{% endblock navbar %}

        {% block header %}
        {% endblock header %}

        <div class="content">
            {% block page_header %}
            {% endblock page_header %}

            {% block flashes %}
                {% from 'MopaBootstrapBundle::flash.html.twig' import session_flash %}
                {{ session_flash(null,true) }}
                {% if app.session.flashbag.peekAll|length > 0 %}
                    <div class="row">
                        <div class="col-md-12">
                            {{ session_flash() }}
                        </div>
                    </div>
                {% endif %}
            {% endblock flashes %}

            {% block content_row %}
                <div class="row">
                    {% block content %}
                        {% block content_sidebar %}
                        {% endblock content_sidebar %}
                    {% endblock content %}
                    {% block fos_user_content %}
                    {% endblock fos_user_content %}
                </div>
            {% endblock content_row %}
        </div>
        <footer>
            {% block footer %}
            {% endblock footer %}
        </footer>
    </div> <!-- /container -->
{% endblock container %}
{% block foot_script %}
    {# To only use a subset or add more js overwrite and copy paste this block
    To speed up page loads save a copy of jQuery in your project and override this block to include the correct path
    Otherwise the regeneration is done on every load in dev more with use_controller: true
     #}
    <script type="text/javascript" src="{{ asset('bundles/applicationnetworkinginitcms/js/app.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/applicationnetworkinginitcms/vendor/featherlight/src/featherlight.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/applicationnetworkinginitcms/vendor/featherlight/src/featherlight.gallery.js') }}"></script>
{% endblock foot_script %}
{% endblock body %}
</body>
</html>

