{% extends 'SandboxInitCmsBundle::layout.html.twig' %}

{% block title %}{{ page.metaTitle }}{% endblock %}


{% block content %}
    <div class="hero-unit">
		{% for layoutBlock in page.layoutBlock('top') %}
		{{ networking_init_cms_block('SandboxInitCmsBundle:Content:cms_block.html.twig', layoutBlock)}}
		{% endfor %}
	</div>
    <div class="row-fluid">
        <div class="span12">
            <div class="middle">
                {% for layoutBlock in page.layoutBlock('middle')  %}
                {{ networking_init_cms_block('SandboxInitCmsBundle:Content:cms_block.html.twig', layoutBlock)}}
                {% endfor %}
            </div>
            <div class="bottom">
                {% for layoutBlock in page.layoutBlock('bottom') %}
                {{ networking_init_cms_block('SandboxInitCmsBundle:Content:cms_block.html.twig', layoutBlock)}}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock content %}


{% block foot_script %}
 {{ parent() }}

 <script type="text/javascript">
 	(function ($) {
 		$('.carousel').carousel();
 		$("a[rel^='prettyPhoto']").prettyPhoto();
 	})(jQuery);
 </script>
 {% endblock %}
